<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{teacher.avatar_url}}" >
    </div>
    </div>
    <div class="item">
        <div>Nome</div>
        <div>
            <input type="text" name="name" placeholder="Nome do Professor" value="{{teacher.name}}"  >
        </div>
    </div>
    <div class="item">
        <div>Data de Nascimento</div>
        <div><input type="date" name="birth" value="{{teacher.birth}}"></div>
    </div>
     <div class="item">
        <div>Grau de Escolaridade</div>
        <div>
            <select name="education_level">
                <option value="Ensino Médio Completo"
                    {% if student.education_level =="Ensino Médio Completo"%}selected{%endif%}>Ensino Médio Completo
                </option>
                <option value="Ensino Superior Completo"
                    {% if student.education_level =="Ensino Superior Completo"%}selected{%endif%}>Ensino Superior Completo
                </option>
                <option value="Mestrado"
                    {% if student.education_level =="Mestrado"%}selected{%endif%}>Mestrado
                </option>
                <option value="Doutorado"
                    {% if student.education_level =="Doutorado"%}selected{%endif%}>Doutorado
                </option>
            </select>
        </div>
    </div>  
    <div class="item">
        <div>Tipo de Aula</div>
        <div>
            <span>
                <input 
                    type="radio" 
                    name="class_type"
                    value="P" 
                    {% if teacher.class_type == "P" %}
                    checked
                    {% endif %} 
                    >Presencial
            </span>
            <span>
                <input 
                    type="radio" 
                    name="class_type"
                    value="D"
                    {% if teacher.class_type == "D" %}
                    checked
                    {% endif %}
                    >À distância
            </span>
        </div>
    </div>
    <div class="item">
        <div>Acompanhamento</div>
        <div>
            <input type="text" name="subjects_taught" placeholder="Separe as matérias por vírgula" value="{{teacher.subjects_taught}}">
        </div>
    </div>
    <button type="submit">Salvar</button>